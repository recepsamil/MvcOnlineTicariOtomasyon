@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Departman>
@{
   ViewBag.Title = "Index";
   Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
   <tr>
      @*<th>ID</th>*@
      <th>Departman Adı</th>
      <th>Sil</th>
      <th>Güncelle</th>
      <th>Detaylar</th>
   </tr>

   @foreach (var k in Model)
   {
      <tr>
         @*<td>
            @k.DepartmanId
         </td>*@
         <td>
            @k.DepartmanAd
         </td>
         <td>
            <a href="/Departman/DepartmanSil/@k.DepartmanId" class="btn btn-danger" style="width:80px;">Sil</a>
         </td>
         <td>
            <a href="/Departman/DepartmanGetir/@k.DepartmanId" class="btn btn-success">Güncelle</a>
         </td>
         <td>
            <a href="/Departman/DepartmanDetay/@k.DepartmanId" class="btn btn-default" style="background-color:#e07424; color:white;">Detaylar</a>
         </td>
      </tr>
   }
</table>

<a href="/Departman/DepartmanEkle/" class="btn btn-info">Departman Ekle</a>

