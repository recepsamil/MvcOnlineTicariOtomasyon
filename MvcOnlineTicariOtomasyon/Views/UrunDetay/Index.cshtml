@model MvcOnlineTicariOtomasyon.Models.Siniflar.Class1
@{

   ViewBag.Title = "Index";

   Layout = "~/Views/Shared/AdminLayout.cshtml";

}

<!DOCTYPE html>

<html>

<head>

   <meta charset="utf-8">

   <meta http-equiv="X-UA-Compatible" content="IE=edge">

   <title>AdminLTE 3 | E-commerce</title>

   <!-- Tell the browser to be responsive to screen width -->

   <meta name="viewport" content="width=device-width, initial-scale=1">

   <!-- Font Awesome -->

   <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

   <!-- Ionicons -->
   <link href="~/AdminLTE-3.0.4/dist/css/adminlte.css" rel="stylesheet" />

   <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

   <!-- overlayScrollbars -->

   <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">

   <!-- Google Font: Source Sans Pro -->

   <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
   
</head>

<body class="hold-transition sidebar-mini" style="background-color:black">

   <!-- Site wrapper -->

   <div class="wrapper" >

      <!-- Navbar -->

      <nav class="main-header navbar navbar-expand   navbar-light" style="background-color:black"; >

         <!-- Left navbar links -->
         <!-- SEARCH FORM -->
         <!-- Right navbar links -->

      </nav>

      <!-- /.navbar -->
      <!-- Main Sidebar Container -->
      <!-- Main content -->

      <section class="content"  >

         <!-- Default box -->

         <div class="card card-solid" >

            @foreach (var x in Model.Deger1)

            {

               <div class="card-body" style="background-color:black">

                  <div class="row">

                     <div class="col-12 col-sm-6">

                        <h3 class="d-inline-block d-sm-none">LOWA Men’s Renegade GTX Mid Hiking Boots Review</h3>

                        <div class="col-12">

                           <img src="@x.UrunGorsel" class="product-image" alt="Product Image">

                        </div>

                        <div class="col-12 product-image-thumbs">
                           @foreach (var gorsel in Model.Deger1)
                           {

                              <div class="col-12 product-image-thumbs">
                                 <div class="product-image-thumb active">
                                    <img src="https://www.erendemirgrup.com/dosyalar/g/2/9/10/mg.8930.1.jpg"
                                         data-desc="<b>Fırın</b><br />Bu ürün yüksek kaliteli malzemeden üretilmiştir.
                                         Kapak Tipi: Çift camlı kapak, kolay temizlenebilir
                                    Isı Seviyeleri: 50°C - 250°C arası sıcaklık ayarları
                                    Enerji Tüketimi: Düşük enerji tüketimi, A++ enerji sınıfı
                                    Ek Özellikler: Turbo fan, zamanlayıcı ve hızlı ısıtma özellikleri "
                                         onclick="changeDescription(this)" alt="Product Image">
                                 </div>
                                 <div class="product-image-thumb">
                                    <img src="https://static.ticimax.cloud/63749/uploads/urunresimleri/buyuk/schafer-drop-cam-su-isitici-kettle-siy-f1bd56.jpg"
                                         data-desc="<b>Su Isıtıcısı</b><br />Bu su ısıtıcısı enerji tasarrufludur. Kapasite: 1.7 litre
                                                    Güç: 2200W
                                                    Malzeme: Paslanmaz çelik gövde
                                                    Güvenlik Özelliği: Otomatik kapanma ve susuz çalışma koruması"
                                         onclick="changeDescription(this)" alt="Product Image">
                                 </div>


                                 <div class="product-image-thumb" >
                                    <img src="https://cdn.dsmcdn.com/mrktng/seo/aralik4/no-frost-ne-demek-1.jpg" 
                                         data-desc="<b>Buzdolabı</b><br /> Kapasite: 500 litre, geniş iç hacim
                                                    Soğutma Teknolojisi: No-Frost, eşit dağılımlı soğutma
                                                    Enerji Sınıfı: A++ enerji verimliliği ile düşük enerji tüketimi
                                                    Ek Özellikler: Hızlı soğutma, kapı alarmı, sebze ve meyve için özel nem kontrol bölmeleri
                                                    Tasarım: Çizilmelere dayanıklı dış yüzey, LED iç aydınlatma"
                                         onclick="changeDescription(this)" alt="Product Image">
                                 </div>

                                 <div class="product-image-thumb">
                                    <img src="https://sm.mashable.com/t/mashable_tr/photo/default/samsung-galaxy-z-fold6-ve-galaxy-z-flip6yi-denedik-4-57-scre_7xrx.1248.png"
                                         data-desc="<b>Telefon</b><br /> Ekran Boyutu: 6.5 inç OLED ekran
                                                    Kamera: 48 MP arka kamera, 12 MP ön kamera
                                                    Pil Ömrü: 4500 mAh, hızlı şarj desteği
                                                    Ekstra Özellikler: Yüz tanıma, parmak izi okuyucu ve 5G bağlantı desteği"
                                         onclick="changeDescription(this)" alt="Product Image">
                                 </div>

                                 <div class="product-image-thumb">
                                    <img src="https://pic.clubic.com/a3b925002198334/1200x900/smart/macbook-air-m3-de-15-pouces.jpg"
                                         data-desc="<b>Laptop</b><br /> Ekran: 13 inç Retina ekran, True Tone teknolojisi
                                                    İşlemci: Apple M1 çip
                                                    Depolama: 256 GB veya 512 GB SSD seçenekleri
                                                    Pil Ömrü: 20 saate kadar kullanım süresi"
                                         onclick="changeDescription(this)" alt="Product Image">
                                 </div>
                              </div>
                           }
                        </div>
                     </div>
                     <div class="col-12 col-sm-6">

                        <h3 class="my-3"></h3>

                        <div id="urun-aciklama" style="font-size:36px; color:white;">
                           <p></p>
                        </div>
                        <hr>
                     </div>
                  </div>
               </div>
               <!-- /.card-body -->
            }

         </div>

         <!-- /.card -->

      </section>

      <!-- /.content -->

   </div>

   <!-- /.content-wrapper -->
   <!-- Control Sidebar -->

   <aside class="control-sidebar control-sidebar-dark">

      <!-- Control sidebar content goes here -->

   </aside>

   <!-- /.control-sidebar -->
   <!-- ./wrapper -->
   <!-- jQuery -->

   <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

   <!-- Bootstrap 4 -->

   <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

   <!-- AdminLTE App -->

   <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>

   <!-- AdminLTE for demo purposes -->

   <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
   <script>
      function changeDescription(img) {
         const description = img.getAttribute("data-desc");
         document.getElementById('urun-aciklama').innerHTML = `<p>${description}</p>`;
      }
   </script>


</body>

</html>

