@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Faturalar>
@{
   ViewBag.Title = "Index";
   Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
   <tr>
      <th>Seri Sıra No</th>
      <th>Tarih</th>
      <th>Saat</th>
      <th>Toplam</th>
      <th>Güncelle</th>
      <th>Detaylar</th>
      <th>Yeni Kalem</th>
   </tr>

   @foreach (var k in Model)
   {
      <tr>
         <td>@k.FaturaSeriNo @k.FaturaSıraNo</td>
         <td>@k.Tarih</td>
         <td>@k.Saat</td>
         <td>@k.Toplam ₺</td>


         <td>
            <a href="/Fatura/FaturaGetir/@k.FaturaId" class="btn btn-success">Güncelle</a>
         </td>
         <td>
            <a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:#e07424; color:white;">Detaylar</a>
         </td>
         <td>
            <a href="/Fatura/FaturaDetay/@k.FaturaId" class="btn btn-default" style="background-color:#9f0267; color:white;">Kalem</a>
         </td>
      </tr>
   }
</table>

<a href="/Fatura/FaturaEkle/" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<button type="button" class="btn btn-warning" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>


<div class="modal" id="Modal1">
   <div class="modal-dialog">
      <div class="modal-content">
         <div class="modal-header">
            <h2 class="modal-title">Popup Diyalog Ekranı</h2>
         </div>
         <div class="modal-body">
            <table class="table table-bordered">
               <tr>
                  <td>Seri No</td>
                  <td>Sıra No</td>
                  <td>Tutar</td>
               </tr>
               @foreach (var x in Model)
               {


                  <tr>
                     <td>@x.FaturaSeriNo</td>
                     <td>@x.FaturaSıraNo</td>
                     <td>@x.Toplam </td>
                  </tr>
               }
            </table>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            <button type="button" class="btn btn-success">Deneme</button>
         </div>
      </div>
   </div>
</div>