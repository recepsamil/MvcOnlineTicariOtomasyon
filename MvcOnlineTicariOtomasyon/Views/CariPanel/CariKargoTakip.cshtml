@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoTakip>
@{
   ViewBag.Title = "CariKargoTakip";
   Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<table class="table table-striped">
   <tr>
      <th>#</th>
      <th>Açıklama</th>
      <th>Tarih</th>
   </tr>

  
      @for (int i = 0; i < Model.Count; i++)
      {
         <tr>
            <td>@(i + 1 )-</td> <!-- Sıra numarasını görüntüler -->
            <td>@Model[i].Aciklama</td>
            <td>@Model[i].TarihZaman</td>
         </tr>
      }


   
</table>

